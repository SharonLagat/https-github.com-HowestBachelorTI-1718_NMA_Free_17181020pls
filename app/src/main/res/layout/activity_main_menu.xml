<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.howest.ti.yd.fitness_tracker.MainMenu">

    <Button
        android:id="@+id/btn_log"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="120dp"
        android:drawableStart="@drawable/notebook"
        android:onClick="showLogActivity"
        android:text="@string/btn_log"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_1RM"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="232dp"
        android:drawableStart="@drawable/weightlifting"
        android:onClick="showRMActivity"
        android:text="@string/btn_1RM"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/choose_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_activity"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <Button
        android:id="@+id/button"
        android:layout_width="377dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:drawableStart="@drawable/pullup"
        android:onClick="showRoutineActivity"
        android:text="Training Routines"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1RM" />

</android.support.constraint.ConstraintLayout>
